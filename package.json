{
  "name": "next-contents-management",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --dir src",
    "format": "prettier --parser=babel-ts --write --ignore-path .gitignore 'src/**/*.{js,jsx,ts,tsx,json,css}'"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "singleQuote": true,
    "semi": false,
    "trailingComma": "all",
    "parser": "typescript"
  },
  "dependencies": {
    "bulma": "^0.9.3",
    "next": "11.0.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "recoil": "^0.4.1"
  },
  "devDependencies": {
    "@emotion/react": "^11.4.1",
    "@emotion/styled": "^11.3.0",
    "@types/react": "17.0.16",
    "eslint": "7.32.0",
    "eslint-config-next": "11.0.1",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.3.2",
    "sass": "^1.37.5",
    "typescript": "4.3.5"
  }
}
